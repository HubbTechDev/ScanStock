generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // or postgres if you're using it
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  IN_STOCK
  SOLD
  LOST
  DONATED
}

enum ListingPlatform {
  MERCARI
  DEPOP
  EBAY
  OTHER
}

enum ListingStatus {
  ACTIVE
  SOLD
  ENDED
}

enum MovementType {
  CREATED
  MOVED
  SOLD
  RETURNED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  cost          Float?
  expectedPrice Float?
  status        ProductStatus @default(IN_STOCK)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id])

  listings  Listing[]
  movements InventoryMovement[]

  createdAt DateTime @default(now())
}

model Listing {
  id        String @id @default(cuid())
  platform  ListingPlatform
  status    ListingStatus @default(ACTIVE)
  price     Float?
  url       String?

  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}

model Location {
  id    String @id @default(cuid())
  name  String

  userId String
  user   User @relation(fields: [userId], references: [id])

  products Product[]
}

model InventoryMovement {
  id        String @id @default(cuid())
  type      MovementType
  note      String?

  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}
